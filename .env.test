# Database
DATABASE_URL=sqlite+aiosqlite:///:memory:
DB_ECHO=True
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Application
TESTING=True
DEBUG=True
APP_NAME=TestApp
API_V1_STR=/api/v1

# Security
SECRET_KEY=test-secret-key-very-long-and-very-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=5
REFRESH_TOKEN_EXPIRE_MINUTES=60

# Logging
LOG_LEVEL=DEBUG

# CORS
BACKEND_CORS_ORIGINS=["http://localhost", "http://localhost:8080", "http://localhost:3000"]

# Custom test settings
MOCK_EXTERNAL_API=True
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test_password

# You can add more test-specific environment variables here
